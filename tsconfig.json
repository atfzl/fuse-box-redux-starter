{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "baseUrl": "src",
    "paths": {
      "~/*": ["*"]
    },
    "outDir": "build",
    "lib": ["es6", "es7", "es2017", "dom"]
  }
}
